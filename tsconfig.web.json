{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "checkJs": false,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/**/*.fixed.*",
    "src/**/*-fixed.*",
    "node_modules"
  ]
}
